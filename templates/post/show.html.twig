{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="jumbotron text-center">
            <h3>{{ post.title }}</h3>
        </div>

        <div class="col-12">
                <div class="card text-center col-6 m-auto">
                    <div class="card-body">
                        <p class="card-text">{{ post.body }}</p>
                        <p class="">{{ post.createdAt | date("d/m/Y") }}</p>
                    </div>
                </div>
        </div>
    </div>

{% endblock %}
