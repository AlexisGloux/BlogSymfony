{% extends 'layout/base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="jumbotron text-center">
            <h3>Recherche</h3>
        </div>

        <div class="col-12">
            <div class="col-6 mb-4">
                <form>
                    <label class="" for="search">Recherche</label>
                    <input type="search" class="" name="q" id="search">
                    <button type="submit" class="btn btn-primary">Recherhcer</button>
                </form>
            </div>

            {% for post in posts %}
                <div class="card text-center col-6 m-auto">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.body }}</p>
                        <p class="">{{ post.createdAt | date("d/m/Y") }}</p>
                        <a class="btn btn-sm btn-info" href="{{ path('post_show', {'id': post.id}) }}">DÃ©tails</a>
                    </div>
                </div>
            {% else %}
                <p>Aucun article</p>
            {% endfor %}
        </div>

    </div>

{% endblock %}
