{% extends 'layout/base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="jumbotron text-center">
            <h3>Édition de l'auteur : {{ author.name }}</h3>
        </div>

        <div class="row">
            <div class="col-md-12 white-box">
                <div class="col-md-8 m-auto">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            <h6><b>Une erreur est survenue</b></h6>
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ include('author/_form.html.twig', {'button_label': 'Enregistrer'}) }}
                </div>
                <div class="col-md-8 m-auto">
                    {{ form_start(password_form) }}
                    {{ form_errors(password_form) }}
                    {{ form_widget(password_form.password) }}
                    <button class="btn btn-primary">Mettre à jour</button>
                    {{ form_end(password_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
