{% extends 'layout/base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="jumbotron text-center">
            <h3>Tous les articles de l'auteur : </h3>
        </div>

        <div class="col-12">
            {% for article in articles %}
                <div class="card text-center col-6 m-auto">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.body }}</p>
                        <p class="">{{ article.createdAt | date("d/m/Y") }}</p>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Cet auteur a Ã©crit aucun article</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}
