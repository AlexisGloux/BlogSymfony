{% extends 'layout/base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="jumbotron text-center">
            <h3>Tous les auteurs</h3>
        </div>

        <div class="col-md-6 m-auto">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success text-center">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    <h6><b>Une erreur est survenue</b></h6>
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <div class="col-lg-3 ml-auto text-right">
            <a class="btn btn-sm btn-primary pull-right" href="{{ path('author_new') }}">Ajouter un auteur</a>
        </div>

        <div class="col-12">
            {% for author in authors %}
                <div class="card text-center col-6 m-auto">
                    <div class="card-body">
                        <h5 class="card-title">{{ author.name }}</h5>
                        <p class="card-text">{{ author.email }}</p>
                        <a class="btn btn-sm btn-info" href="{{ path('author_show', {'id': author.id}) }}">Vois tous ses articles</a>
                    </div>
                </div>
            {% else %}
                <p>Aucun article</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}
